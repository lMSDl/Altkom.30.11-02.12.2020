<Window x:Class="WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left">
                <ToggleButton x:Name="ToggleButton_Students"
                              Click="ToggleButton_Click_Students">Students</ToggleButton>
                <ToggleButton x:Name="ToggleButton_Educators"
                              Click="ToggleButton_Click_Educators">Educators</ToggleButton>
            </StackPanel>
            <Frame DockPanel.Dock="Right"
                   NavigationUIVisibility="Hidden"
                   x:Name="Frame" />

        </DockPanel>
    </Grid>
</Window>
